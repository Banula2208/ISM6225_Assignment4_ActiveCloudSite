<!DOCTYPE html>
@model UrbanBikesCompany.DTos.BikeServiceDTO;
<html lang="en" xml:lang="en">
<head>
    <title>URBAN BIKE WORKS</title>

    <link href="~/css/style.css" rel="stylesheet" />
</head>

<body>


    <!-- Main content that should be edited -->

        <div class="sign-container">
             @using (Html.BeginForm("CreateService", "Home", FormMethod.Post))
             {
            <div class="signform">
                <div class="signform-group">
                    <label for="username">Service Name</label>
                @Html.DropDownListFor(model => model.serviceId, (IEnumerable<SelectListItem>)ViewBag.ServiceListData, "Select an option")
                </div>
                <div class="signform-group">
                    <label for="email">Bike</label>
                @Html.DropDownListFor(model => model.bikeId, (IEnumerable<SelectListItem>)ViewBag.BikeListData, "Select an option")
                </div>
                <div class="signform-group">
                    <label for="password">Price</label>
                   @Html.TextBoxFor(model => model.price)
                </div>

                <div class="popup">
                    <h2>Request submitted successfully!</h2>
                    <button id="close-popup" class="signform-submit-btn-green">
                        Ok
                    </button>
                </div>

                <div class="signform-btn">
                    <button class="signform-submit-btn" onclick="location.href='@Url.Action("Dashboard","Home")'">
                        Cancel
                    </button>
                    <button class="signform-submit-btn-green"
                            id="signform-submit-btn-green"
                            type="submit">
                        Create
                    </button>
                </div>
            </div>
            }
        </div>
 

</body>
</html>
